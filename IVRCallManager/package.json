{
  "name": "IVRCallManager",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "build-debug": "cd android && ./gradlew assembleDebug",
    "build-release": "cd android && ./gradlew assembleRelease",
    "install-debug": "cd android && ./gradlew installDebug",
    "install-release": "cd android && ./gradlew installRelease",
    "build-apk": "cd android && ./gradlew assembleDebug && echo 'APK built successfully! Check android/app/build/outputs/apk/debug/'",
    "build-apk-release": "cd android && ./gradlew assembleRelease && echo 'Release APK built! Check android/app/build/outputs/apk/release/'",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "clean": "cd android && ./gradlew clean"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.24.0",
    "@react-native-community/netinfo": "^11.4.1",
